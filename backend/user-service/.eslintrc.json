{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:prettier/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "prettier"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "linebreak-style": 0,
        "import/extensions": ["error", {
            "ignorePackages": true,
            "pattern": {
                "js": "always",
                "jsx": "always"
            }
            }],
        "no-underscore-dangle": "warn",
        "import/order": "warn",
        "eqeqeq": "warn"
    }
}